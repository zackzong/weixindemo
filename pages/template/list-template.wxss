/* pages/template/list-template.wxss */
.tmpContainer {
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #999;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
}

.avatar_data {
  margin:10rpx 0 20rpx 10rpx;
}

.avatar_data image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.avatar_data text {
  font-size: 32rpx;
}

.company {
  font-size: 50rpx;
  font-weight: 700;
}

.contentImg {
  width: 100%;
  height: 460rpx;
}

.content {
  font-size: 32rpx;
  font-weight: 300;
  text-indent: 32rpx;
}

.collection_love image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}
.collection_love text {
  font-size: 32rpx;
}